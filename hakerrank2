#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>
int marks_summation(int*marks,int number_of_students,char gender){
    int sum=0,sum1=0;
    for(int i=0;i<number_of_students;i++)
    {
        if(i%2==0 && gender=='b'){
            sum=sum+(*(marks+i));
        }
        if(i%2!=0 && gender=='g'){
            sum=sum+(*(marks+i));
        }
    }
    return sum;
    
}
